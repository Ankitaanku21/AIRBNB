<% layout("/layouts/boilerplate") %>
<body>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">

        <% if(listings.length === 0) { %>
            <p class="card col listing-card" style="position: center;">No results found!! </p>
        <% } else {%>
            <% for(let listing of listings ){ %>
                <a href="/listings/<%= listing._id %>" class="listing_link" data-category="<%= listing.category %>">
                    <div class="card col listing-card" style="width: 22.5rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height:20rem;" alt="listing image">
                    <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %> </br></b>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } %>
</body>